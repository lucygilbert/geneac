<%
# Tag list partial
# For use with acts_as_taggable
%>

<div class="field-unit__label">
  <%= f.label field.attribute %>
</div>

<div class="field-unit__field" data-controller="person-tag-list-field">
  <%= f.text_field field.attribute, value: (field.data || []).join(', ') + ', ', data: {'person-tag-list-field-target': 'value'} %>
</div>
